class_names = ["pothole"]

data_yaml = {
    "train": os.path.join(WORKDIR, "train", "images"),
    "val": os.path.join(WORKDIR, "val", "images"),
    "test": os.path.join(WORKDIR, "test", "images"),
    "nc": len(class_names),
    "names": class_names
}

yaml_path = os.path.join(WORKDIR, "data.yaml")
with open(yaml_path, "w") as f:
    yaml.dump(data_yaml, f, default_flow_style=False)

print("File data.yaml disimpan di:", yaml_path)
print(open(yaml_path).read())
